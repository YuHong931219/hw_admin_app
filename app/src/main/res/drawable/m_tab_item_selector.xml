<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/tab_item_pressed" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/tab_item_selected" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/tab_item_default" />
        </shape>
    </item>
</selector>