<resources>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="XUITheme.Phone">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="XUITheme.Launch">
        <item name="android:windowBackground">@drawable/config_bg_splash</item>
        <item name="xui_config_splash_app_logo">@drawable/ic_splash_app_logo_xui</item>
        <item name="xui_config_splash_company_logo">@drawable/ic_splash_company_logo_xuexiang</item>
        <item name="android:navigationBarColor">@color/xui_config_color_transparent</item>
    </style>

    <style name="fullscreen" parent="android:Theme.NoTitleBar.Fullscreen" />

    <style name="RightInRightOutAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="Animation_RightInRightOutActivity" parent="Theme.AppCompat.Light">
        <item name="android:windowAnimationStyle">@style/RightInRightOutAnim</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ContentSplitHorizontalBorderView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/split_line</item>
    </style>

    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <declare-styleable name="CircularImage">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <style name="Dialog_Fullscreen">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="view_line_gn_page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/bg_table_item</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="itemstyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="line_style">
        <item name="android:background">#ffe4e4e4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="line_style_list">
        <item name="android:background">#888888</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="lay_out_line">
        <item name="android:background">@drawable/layout_detail_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="text_out_line">
        <item name="android:background">@drawable/text_detail_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>


    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">?attr/xui_config_size_content_text</item>
    </style>

    <style name="TabText.Explain">
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">?attr/xui_config_size_explain_text</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/xui_config_color_main_theme</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="android:background">@color/xui_config_color_white</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">@color/xui_config_color_main_theme</item>
        <item name="tabTextColor">@color/xui_config_color_gray_6</item>
    </style>
    <style name="CardLayOut">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:background">@color/xui_config_color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="xui_borderColor">?attr/xui_config_color_separator_light</item>
        <item name="xui_outerNormalColor">?attr/xui_config_color_background</item>
        <item name="xui_radius">5dp</item>
        <item name="xui_showBorderOnlyBeforeL">true</item>
        <item name="xui_useThemeGeneralShadowElevation">true</item>
    </style>
    <style name="TextStyle.Content.Label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle.Content.Content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center|start</item>
    </style>
    <style name="EditText.Normal.Content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:inputType">text</item>
    </style>

</resources>
